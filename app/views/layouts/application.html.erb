<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><span>LOGO</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if admin_signed_in? %>
        <!--adminでログインしているときのヘッダー-->
          <li>
            <%= link_to admin_items_path do %>
              <i class="fas fa-home"></i>商品一覧
            <% end %>

            <%= link_to admin_customers_path do %>
              <i class="fas fa-users"></i>会員一覧
            <% end %>

            <%= link_to admin_root_path do %>
              <i class="fas fa-book-open"></i>注文履歴一覧
            <% end %>

            <%= link_to admin_genres_path do %>
              <i class="fas fa-home"></i>ジャンル一覧
            <% end %>

            <%= link_to destroy_admin_session_path, method: :delete do %>
              <i class="fas fa-sign-out-alt"></i>ログアウト
            <% end %>
          </li>

      <!--adminでログアウトしているときのヘッダー-->


        <!--customerでログインしているときのヘッダー-->
        <% elsif customer_signed_in? %>
          <li>
            <%= link_to customers_mypage_path do %>
              <i class="fas fa-user"></i>マイページ
            <% end %>
          </li>
          <li>
            <%= link_to items_path do %>
              <i class="fas fa-users-slash"></i>商品一覧
            <% end %>
          </li>
          <li>
            <%= link_to cart_items_path do %>
              <i class="fa-solid fa-cart-shopping"></i>カート
            <% end %>
          </li>
          <li>
            <%= link_to destroy_customer_session_path, method: :delete do %>
              <i class="fas fa-sign-out"></i>ログアウト
            <% end %>
          </li>
        <% else %>

        <!--customerでログアウトしているときのヘッダー-->
        <li>
          <%= link_to "About", about_path %>
        </li>
        <li>
          <%= link_to "商品一覧", items_path %>
        </li>
        <li>
          <%= link_to "新規登録", new_customer_registration_path %>
        </li>
        <li>
          <%= link_to "ログイン", new_customer_session_path %>
        </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
    <%= yield %>
  </body>
</html>