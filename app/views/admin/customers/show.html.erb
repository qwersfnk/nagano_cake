会員詳細

<table class="table table-borderless" style="width:40%;margin-left:5%;margin-top:40px">
  <tbody>
    <tr>
      <td>会員ID</td>
      <td>1</td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><p><%= @customer.last_name %><%= @customer.first_name %></p></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><p><%= @customer.last_name_kana %><%= @customer.first_name_kana %></p></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><p><%= @customer.postal_code %></p></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><p><%= @customer.address %></p></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><p><%= @customer.telephone_number %></p></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><p><%= @customer.email %></p></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td class="text-success"><%= @customer.is_deleted ? "退会" : "有効" %></td>
    </tr>
    <tr>
      <td></td>
      <td class= "btn btn-success"><%= link_to '編集する', edit_admin_customer_path(@customer.id), class:"text-light" %></td>
      <td></td>
      <td class= "btn btn-primary"><%= link_to '注文履歴一覧を見る', admin_root_path, class:"text-light" %></td>
    </tr>
  </tbody>
</table>