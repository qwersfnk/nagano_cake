  <!-- form_with部分 -->
  <%= form_with model: Genre.new, url: admin_genres_path,method: :post do |f| %>

<table class="table table-borderless">
  <tbody>
    <tr class="table-secondary">
      <td>会員ID</td>
      <td>氏名</td>
      <td>メールアドレス</td>
