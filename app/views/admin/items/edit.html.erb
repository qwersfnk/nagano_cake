<div style="width:80%;margin-left:20%;margin-top:30px">
  <h5>商品編集</5>
</div>

<table class="table table-borderless" style="width:50%;margin-left:30%;margin-top:60px">
  <tbody>
  <%= form_with model: @item, url: admin_item_path,method: :patch do |f| %>
    <tr>
      <td>商品画面</td>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>
    <tr>
      <td>商品名</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= f.text_field :introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></td>
    </tr>
    <tr>
      <td>税抜価格</td>
      <td><%= f.text_field :price %>円</td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <td><%= f.radio_button :is_active, true %>販売中</td>
      <td><%= f.radio_button :is_active, false %>販売停止中</td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit '変更を保存', class: "btn btn-success" %></td>
      <td></td>
    </tr>
  <% end %>
  </tbody>
</table>