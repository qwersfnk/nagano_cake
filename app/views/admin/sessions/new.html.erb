<div style="width:80%;margin-left:20%;margin-top:30px">
  <h5>管理者ログイン</5>
</div>

<div class="table table-borderless" style="width:80%;margin-left:25%;margin-top:60px">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="pl-5">
      <div class="form-group row">
        <div class="col-sm-2 col-form-label">
          <td><%= f.label :"メールアドレス" %></td>
         </div>
         <div class="col-sm-10">
           <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
         </div>
      </div>
    </div>
    <div class="pl-5">
      <div class="form-group row">
        <div class="col-sm-2 col-form-label">
          <td><%= f.label :"パスワード" %></td>
        </div>
        <div class="col-sm-10">
          <td><%= f.password_field :password, autocomplete: "current-password" %></td>
        </div>
      </div>
    </div>
    <div  class="table table-borderless" style="width:70%;margin-left:21%;margin-top:20px">
      <td><%= f.submit "ログイン", class: "btn btn-info" %></td>
    </div>
  <% end %>
</div>
<%= render "admin/shared/links" %>