<table class="table table-borderless" style="width:40%;margin-left:30%;margin-top:60px">
  <tbody>
   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <tr>
    <td><%= f.label :"メールアドレス" %></td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
   </tr>
   <tr>
    <td><%= f.label :"パスワード" %></td>
    <td><%= f.password_field :password, autocomplete: "current-password" %></td>
   </tr>
   <tr>
    <td></td>
    <td><%= f.submit "ログイン", class: "btn btn-info" %></td>
   </tr>
  </tbody>
</table>
<% end %>

<%= render "admin/shared/links" %>