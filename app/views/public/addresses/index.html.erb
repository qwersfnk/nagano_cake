<table class="table table-borderless" style="width:40%;margin-left:5%;margin-top:60px">
  <tbody>
    <%= form_with model: @address do |f| %>
    <tr>
      <td>郵便番号(ハイフンなし)</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td>宛名</td>
      <td><%= f.text_field :name %></td>
      <td><%= f.submit '新規登録', class: "btn btn-success" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<table class="table table-bordered" style="width:60%;margin-left:3%;margin-top:60px">
  <tbody>
    <tr>
       <td class="bg-secondary">郵便番号</td>
       <td class="bg-secondary">住所</td>
       <td class="bg-secondary">宛名</td>
       <td class="bg-secondary"></td>
     <tr></tr>
      <% current_customer.addresses.each do |address| %>
       <td><%= address.postal_code %></td>
       <td><%= address.address %></td>
       <td><%= address.name %></td>
       <td><%= link_to '編集する', edit_address_path(address.id), class: "btn btn-success" %>
           <%= link_to '削除する', address_path(address.id), method: :delete, class: "btn btn-danger" %></td>
      <% end %>
    </tr>
  </tbody>
</table>