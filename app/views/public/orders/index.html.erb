注文履歴一覧のindex

<table class="table table-bordered" style="width:90%;margin-left10%;margin-top:30px">
  <tbody>
    <tr>
      <td class="bg-secondary">注文日</td>
      <td class="bg-secondary">配達先</td>
      <td class="bg-secondary">注文商品</td>
      <td class="bg-secondary">支払全額</td>
      <td class="bg-secondary">ステータス</td>
      <td class="bg-secondary">注文詳細</td>
    </tr>
    <tr>
      <% @order.each do |order| %>
      <td><%= order.created_at.to_s(:datetime_jp) %></td>
      <td>
       <div>
        <%= order.postal_code %>
       </div>
       <div>
        <%= order.address %>
       <div>
       </div>
        <%= order.customer.last_name %><%= order.customer.first_name %>
       </div>
      </td>
      <td>
       <div>
        <% order.order_details.each do |order_detail| %>
       <div>
       </div>
        <%= order_detail.item.name %>
       <div>
       </div>
        <% end %>
      </td>
      <td><%= order.total_payment %>円</td>
      <td><%= order.status_i18n %></td>
      <td><%= link_to '表示する', order_path(order), class: "btn btn-primary" %></td>
    </tr>
    <% end %>
  </tbody>
</table>