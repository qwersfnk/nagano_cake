<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-6">
      <h4>注文情報</h4>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="bg-secondary">注文日</td>
            <td><%= @order.created_at.to_s(:datetime_jp) %></td>
          </tr>
          <tr>
            <td class="bg-secondary">配達先</td>
            <td>
              <div>
                <%= @order.postal_code %>
              </div>
              <div>
                <%= @order.address %>
              </div>
              <div>
                <%= @order.name %>
              </div>
            </td>
          </tr>
          <tr>
            <td class="bg-secondary">支払方法</td>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <td class="bg-secondary">ステータス</td>
             <td><%= @order.status_i18n %></td>
          </tr>
          <tr>
        </tbody>
      </table>
    </div>

    <div class="col-md-3 offset-md-0">
     <h4>請求情報</h4>
      <table class="table table-bordered">
        <tbody>
          <div>
            <tr>
              <td class="bg-secondary">商品合計</td>
              <td><% @total = @order.total_payment-@order.shipping_cost %><%= @total %></td>
            </tr>
            <tr>
              <td class="bg-secondary">配送料</td>
              <td><%= @order.shipping_cost %></td>
            </tr>
            <tr>
              <td class="bg-secondary">ご請求額</td>
              <td><%= @order.total_payment %></td>
            </tr>
          </div>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-6">
      <h4>注文内容</h4>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="bg-secondary">商品</td>
            <td class="bg-secondary">単価（税込）</td>
            <td class="bg-secondary">個数</td>
            <td class="bg-secondary">小計</td>
          </tr>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.price*order_detail.amount %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>