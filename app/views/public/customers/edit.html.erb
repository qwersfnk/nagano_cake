会員情報編集

<%= form_with model: @customer, url:customers_infomation_path do |f| %>
<table class="table table-borderless" style="width:50%;margin-left:5%;margin-top:40px">
  <tbody>
    <tr>
      <td>名前</td>
      <td><%= f.text_field :last_name, autofocus: true %></td>
      <td><%= f.text_field :first_name, autofocus: true %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= f.text_field :last_name_kana, autofocus: true %></td>
      <td><%= f.text_field :first_name_kana, autofocus: true %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= f.text_field :postal_code, autofocus: true %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address, autofocus: true %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= f.text_field :telephone_number, autofocus: true %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
  </tbody>
</table>
<table class="table table-borderless" style="width:40%;margin-left:17%;margin-top:10px">
  <tbody>
    <tr>
      <td><%= f.submit "編集内容を保存", class: "btn btn-success"  %></td>
      <td><%= link_to "退会する", customers_withdrawal_path, class: "btn btn-danger" %></td>
    </tr>
  </tbody>
</table>
<% end %>